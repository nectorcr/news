<LinearLayout
    tools:context="com.example.android.news.MainActivity"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1">

       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content" style="@style/TeamText"
           android:text="@string/team_1"
           android:layout_centerHorizontal="true"
           android:layout_alignParentTop="true"/>

       <ImageButton
           android:layout_height="@dimen/button_size"
           android:layout_width="@dimen/button_size" style="@style/MinusButtons"
           android:onClick="decreaseScore"
           android:layout_centerVertical="true"
           android:layout_alignParentStart="true"
           android:layout_alignParentLeft="true"
           android:id="@+id/decreaseTeam1"/>

       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           style="@style/ScoreText"
           android:text="@string/initial_count"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:id="@+id/score_1"/>

       <ImageButton
           android:layout_height="@dimen/button_size"
           android:layout_width="@dimen/button_size" style="@style/PlusButtons"
           android:onClick="increaseScore"
           android:layout_centerVertical="true"
           android:id="@+id/increaseTeam1"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true"/>

     </RelativeLayout>


    <RelativeLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1">

       <TextView
          android:layout_height="wrap_content"
          android:layout_width="wrap_content" style="@style/TeamText"
          android:text="@string/team_2"
          android:layout_centerHorizontal="true"
          android:layout_alignParentTop="true"/>

       <ImageButton
           android:layout_height="@dimen/button_size"
           android:layout_width="@dimen/button_size" style="@style/MinusButtons"
           android:onClick="decreaseScore"
           android:layout_centerVertical="true"
           android:layout_alignParentStart="true"
           android:layout_alignParentLeft="true"
           android:id="@+id/decreaseTeam2"/>

       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content" style="@style/ScoreText"
           android:text="@string/initial_count"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:id="@+id/score_2"/>

       <ImageButton
           android:layout_height="@dimen/button_size"
           android:layout_width="@dimen/button_size" style="@style/PlusButtons"
           android:onClick="increaseScore"
           android:layout_centerVertical="true"
           android:id="@+id/increaseTeam2"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</LinearLayout>